<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWeChatActionBarBG</item>
        <item name="colorPrimaryDark">@color/colorWeChatActionBarBG</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarSize">@dimen/actionBarSize</item>
        <!-- To change the popup menu and app text color  -->
        <item name="android:textColor">@color/standardWhite</item>
        <!-- To change the background of options menu-->
        <item name="android:itemBackground">@color/colorWeChatActionBarBG</item>
        <item name="android:actionOverflowButtonStyle">@style/CustomedActionOverflowButtonStyle</item>
    </style>
    <style name="CustomedActionOverflowButtonStyle" parent="android:Widget.ActionButton.Overflow">
        <item name="android:src">@mipmap/add</item>
        <item name="overlapAnchor">false</item>
    </style>
</resources>