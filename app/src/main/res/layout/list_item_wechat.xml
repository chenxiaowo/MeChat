<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/lv_img_user"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="55dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/wn"
        android:padding="3dp"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="6dp"
        android:paddingTop="10dp"
        >
        <TextView
            android:id="@+id/lv_tv_uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/wechat_username_font_size"
            android:textColor="@color/standardBlack"
            android:text="@string/test_lv_tv_uname"
            />
        <TextView
            android:id="@+id/lv_tv_digest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_lv_tv_digest"
            android:textColor="@color/colorWeChatGray"
            android:textSize="@dimen/wechat_digest_font_size"
            android:paddingTop="3dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/lv_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:textColor="@color/colorWeChatGray"
        android:textSize="@dimen/wechat_time_font_size"
        android:paddingRight="4dp"
        android:text="10/25/17"
        />
</LinearLayout>